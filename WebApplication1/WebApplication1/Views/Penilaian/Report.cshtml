
@{
    ViewData["Title"] = "Report";
}


<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>


<canvas id="myChart" style="width:100%;max-width:600px"></canvas>

<script>
var xValues = ["<70%", "70% s/d 90%", ">90%"];
var yValues = [@ViewBag.a, @ViewBag.b, @ViewBag.c];
var barColors = [
  "#ff0000",
  "#FFFF00",
  "#00FF00"
];

new Chart("myChart", {
  type: "pie",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    title: {
      display: true,
      text: "Report Penilaian"
    }
  }
});
</script>